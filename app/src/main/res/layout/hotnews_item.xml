<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:id="@+id/main_title"
            android:textColor="@color/color_txt_deep_black"
            android:textSize="16sp"
            android:lineSpacingExtra="8dp"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西误差喜爱误差西误差喜爱误差西误差喜爱误差西误差喜爱误差"/>
        <ImageView
            android:src="@mipmap/defalt_pic_b"
            android:scaleType="fitXY"
            android:id="@+id/main_pic"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="165dp" />
        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/from"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/color_txt_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人民网"/>
            <TextView
                android:id="@+id/time"
                android:textSize="12sp"
                android:textColor="@color/color_txt_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-08"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_gray"/>


</LinearLayout>