<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <include layout="@layout/layout_title" />
        <ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"  >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <ImageView
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/logo_conner"/>
                <LinearLayout
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textColor="@color/color_txt_gray"
                        android:textSize="13sp"
                        android:hint="@string/str_user_name"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:id="@+id/user_name_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line_gray"/>
                    <EditText
                        android:inputType="textPassword"
                        android:textColor="@color/color_txt_gray"
                        android:textSize="13sp"
                        android:hint="@string/str_user_password"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:id="@+id/user_psw_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_line_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:paddingTop="20dp"
                    android:paddingRight="55dp"
                    android:paddingLeft="55dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/rember_psw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/rember_psw_uncheck"/>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/str_remenber_password"
                        android:textColor="@color/color_txt_black"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/forget_psw"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_forget_password"
                            android:textSize="13sp"
                            android:textColor="#31a0ff"/>
                        <ImageView
                            android:paddingLeft="5dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/forget_psw"/>
                    </LinearLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/logion"
                    android:layout_gravity="center"
                    android:background="@drawable/login_button"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"
                    android:layout_width="280dp"
                    android:layout_height="39dp"
                    android:text="@string/str_login"/>
                <Button
                    android:id="@+id/regist"
                    android:layout_gravity="center"
                    android:background="@drawable/regist_button"
                    android:textColor="@color/color_base"
                    android:layout_marginTop="20dp"
                    android:layout_width="280dp"
                    android:layout_height="39dp"
                    android:text="@string/str_register"/>
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:paddingLeft="55dp"
                    android:paddingRight="55dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="@color/color_line_gray"/>
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/color_txt_black"
                        android:layout_centerInParent="true"
                        android:text="@string/str_userlogin_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="@color/color_line_gray"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/third_one"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/weibo"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/third_two"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/mht"/>
                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/third_three"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/weixin"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>