                    android:layout_width="94dp"
                    android:layout_height="68dp" />
                <ImageView
                    android:id="@+id/paly1"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/radio_play"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/name1"
