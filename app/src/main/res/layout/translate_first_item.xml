<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/list_title"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout1"
            android:paddingTop="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/cover1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/airport"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/name1"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_txt_deep_black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate_parent_airport"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout2"
            android:paddingTop="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/cover2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/traffic"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/name2"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_txt_deep_black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate_parent_traffic"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout3"
            android:paddingTop="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/cover3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/hotel"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/name3"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_txt_deep_black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate_parent_hotel"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout4"
            android:paddingTop="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/cover4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/restaurant"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/name4"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_txt_deep_black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate_parent_restaurant"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout5"
            android:paddingTop="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/cover5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/attractions"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/name5"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_txt_deep_black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate_parent_attraction"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/layout6"
            android:paddingTop="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/cover6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/game"/>
            <TextView
                android:textSize="12sp"
                android:id="@+id/name6"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_txt_deep_black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/translate_parent_entertainment"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>